@model HospitalSanJoseModel.Department

@{
    ViewData["Title"] = "Departamentos";
}


<div class="card p-3">
    <div class="d-flex justify-content-between">
        <div>
            <h3>Eliminar Departamento</h3>
            <p class="text-muted m-0">Estas seguro que quieres eliminar este departamento?</p>
        </div>

        <a class="align-self-end" role="button" onclick="window.history.back()">Regresar </a>
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
    </form>
</div>
