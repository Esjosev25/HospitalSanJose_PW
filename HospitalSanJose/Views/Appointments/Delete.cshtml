@model HospitalSanJoseModel.Appointment

@{
    ViewData["Title"] = "Delete";
}

<div class="card p-3">
    <div class="d-flex justify-content-between">
        <div>
            <h3>Eliminar Cita</h3>
            <p class="text-muted m-0">Estas seguro que quieres eliminar esta cita?</p>
        </div>

        <a class="align-self-end" role="button" onclick="window.history.back()">Regresar </a>
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.AppointmentDate.ToString("dd'/'MM'/'yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class = "col-sm-10">
            @Model.Doctor.User.FirstName @Model.Doctor.User.LastName (@Model.Doctor.User.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Model.User.FirstName @Model.User.LastName (@Model.User.Username)
        </dd>
    </dl>
    

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
