<form asp-action="Edit">
   
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <label asp-for="User.Username" class="col-md-4 col-lg-3 col-form-label"></label>
        <div class="col-md-8 col-lg-9">
            <input asp-for="User.Username" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="User.Email" class="col-md-4 col-lg-3 col-form-label"></label>
        <div class="col-md-8 col-lg-9">
            <input asp-for="User.Email" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-4 col-lg-3 col-form-label">Full Name</label>
        <div class="col-md-8 col-lg-9">
            <input name="FirstName" type="text" class="form-control" id="FirstName" value="@Model.User.FirstName @Model.User.LastName" disabled>
        </div>
    </div>
    @if (Model.Dpi != null)
    {
        <div class="row mb-3">
            <label asp-for="Dpi" class="col-md-4 col-lg-3 col-form-label"></label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Dpi" class="form-control" disabled />
            </div>
        </div>
    }

    @if (Model.Birthdate.ToString("dd/MM/yyyy") != new DateTime(1,1,1).ToString("dd/MM/yyyy"))
    {
        <div class="row mb-3">
            <label asp-for="Birthdate" class="col-md-4 col-lg-3 col-form-label"></label>

            <div class="col-md-8 col-lg-9">
                <input asp-for="Birthdate" type="date" class="form-control" disabled />
            </div>

            <span asp-validation-for="Birthdate" class="text-danger"></span>
        </div>
    }
    @if (Model.MaritalStatus != null)
    {
        <div class="row mb-3">
            <label asp-for="MaritalStatus" class="col-md-4 col-lg-3 col-form-label"></label>

            <div class="col-md-8 col-lg-9">
                <input asp-for="MaritalStatus" class="form-control" />
            </div>

            <span asp-validation-for="MaritalStatus" class="text-danger"></span>
        </div>
    }
    @if(Model.City != null){
    <div class="row mb-3">
        <label asp-for="City" class="col-md-4 col-lg-3 col-form-label"></label>
        <div class="col-md-8 col-lg-9">
            <input asp-for="City" class="form-control" />
        </div>

        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    }
    @if (Model.AddressLine1 != null)
    {
        <div class="row mb-3">
            <label asp-for="AddressLine1" class="col-md-4 col-lg-3 col-form-label"></label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="AddressLine1" class="form-control" />
                <span asp-validation-for="AddressLine1" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="AddressLine2" class="col-md-4 col-lg-3 col-form-label"></label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="AddressLine2" class="form-control" />
                <span asp-validation-for="AddressLine2" class="text-danger"></span>
            </div>
        </div>
    }

    @if(Model.PhoneNumber1 != null){
    <div class="row mb-3">
        <label asp-for="PhoneNumber1" class="col-md-4 col-lg-3 col-form-label"></label>
        <div class="col-md-8 col-lg-9">
            <input asp-for="PhoneNumber1" class="form-control" />
            <span asp-validation-for="PhoneNumber1" class="text-danger"></span>
        </div>
    </div>
    }
    @if (Model.PhoneNumber2 != null)
    {
        <div class="row mb-3">
            <label asp-for="PhoneNumber2" class="col-md-4 col-lg-3 col-form-label"></label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="PhoneNumber2" class="form-control" />
                <span asp-validation-for="PhoneNumber2" class="text-danger"></span>
            </div>
        </div>
    }

    @if (!Model.User.Activated)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            Por favor contacta con administración para completar tu perfil
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="form-group text-center">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
    </div>
</form>



        <script>
    function clearFileInput() {
        document.getElementById('uploadFile').value = "";
    }
        </script>