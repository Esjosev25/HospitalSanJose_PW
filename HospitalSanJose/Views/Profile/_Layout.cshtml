@{
 
    var activeTab = ViewBag.ActiveTab ?? "profile-overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-4">

        <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

             @*   <img src="@ViewBag.ImageData" alt="Profile" class="rounded-circle">*@
                <h2>@Model.User.FirstName @Model.User.LastName</h2>
                <h3>@Model.User.Email</h3>
                <div class="social-links mt-2">
                    <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>

    </div>

    <div class="col-xl-8">

        <div class="card">
            <div class="card-body pt-3">
                <!-- Bordered Tabs -->
                <ul class="nav nav-tabs nav-tabs-bordered">

                    <li class="nav-item">
                        <a href="/users/profile" class="nav-link" id="aprofile-overview">Datos Generales</a>
                    </li>

                    <li class="nav-item">
                        <a href="/users/profile/edit" class="nav-link" id="aprofile-edit">Editar Perfil</a>
                    </li>

                    <li class="nav-item">
                        <a href="/users/profile/changepassword" class="nav-link" id="aprofile-change-password">Cambiar Password</a>
                    </li>

                </ul>
                <div class="tab-content pt-2">

                    <div class="tab-pane fade profile-overview" id="profile-overview">
                        @if (activeTab == "profile-overview")
                            @RenderBody()


                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                            @if (activeTab == "profile-edit")
                            @RenderBody()


                        </div>



                        <div class="tab-pane fade pt-3" id="profile-change-password">
                            @if (activeTab == "profile-change-password")
                            @RenderBody()


                        </div>

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>

    <script>
        function activeTag(tags, activeTag) {
            tags.forEach(tag => {
                var element = document.getElementById(tag);
                if (tag == activeTag)
                    element.classList.add("active");
                else
                    element.classList.remove("active");


            });
        }

        var tagsTabs = ["profile-overview", "profile-edit", "profile-change-password"];
        var tagsLinks = ["aprofile-overview", "aprofile-edit", "aprofile-change-password"];

        activeTag(tagsTabs, '@activeTab');
        activeTag(tagsLinks, 'a' + '@activeTab');
        var activeTab = document.getElementById('@activeTab');
        activeTab.classList.add("show");

    </script>