@model IEnumerable<HospitalSanJoseModel.User>

@{
    ViewData["Title"] = "Usuarios";
}


<div class="card p-3">
    <div class="d-flex justify-content-between">
        <h3>Usuarios</h3>
        <a class="btn btn-primary d-flex align-self-end" asp-action="Create"> + Agregar Usuario</a>

    </div>

    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    Roles
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activated)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.IsLocked)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>

                        <a href="@Url.Action("RolesByUser","UserRoles")/@item.Id" class="btn ">
                            <i class="bi bi-clipboard"></i>
                            </a>
                        
                    </td>
                    <td>
                        @if (item.Activated)
                        {
                            <a href="@Url.Action("EditByUserID","PersonalInfoes")/@item.Id" class="btn text-success">
                                <i class="bi bi-person-check"></i>
                            </a>


                        }
                        else
                        {
                            <a href="@Url.Action("Create","PersonalInfoes")/@item.Id" class="btn text-danger">
                                <i class="bi bi-person-dash"></i>
                            </a>
                        }
                    </td>

                    <td>
                        @if (item.IsLocked)
                        {
                            <a href="@Url.Action("BlockUser","Users")/@item.Id" class="btn text-warning">
                                <i class="bi bi-lock"></i>
                            </a>


                        }
                        else
                        {   

                            <a  href="@Url.Action("BlockUser","Users")/@item.Id" class="btn text-warning">
                                <i class="bi bi-unlock"></i>
                            </a>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="btn bi bi-pencil"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="btn bi bi-card-text"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="btn bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="~/js/sweetAlert.js"></script>

